@model IEnumerable<Eshop.Models.ReceivedMessageModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    tr[data-href] {
        cursor: pointer;
    }
</style>

<h1 style="padding-bottom: 10px; padding-top: 10px;">Otrzymane wiadomości</h1>
<div style="padding-bottom: 15px;">
    <a class="btn btn-dark" asp-controller="Messages" asp-action="Received">Otrzymane</a>
    <a class="btn btn-dark" asp-controller="Messages" asp-action="Sent">Wysłane</a>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="mailbox-table" data-href="receiveddetails/@item.Id">
                <td style="height: inherit;">
                    <a class="table-title-w table-title-font">Od: @Html.DisplayFor(modelItem => item.SenderName)</a>
                </td>
                <td style="height: inherit;">
                    <a style ="display:block;"class="table-message-w table-title-font"> @Html.DisplayFor(modelItem => item.MessageTitle)</a>
                </td>
                <td style="height: inherit; text-align: right; padding-right: 10px;">
                    <a class="table-title-font"> @item.SentDate.ToString("g")</a>
                </td>

            </tr>
            }
        </tbody>
    </table>
}
else
{
    <hr />
    <a>Brak otrzymanych wiadomości.</a>
}

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const rows = document.querySelectorAll("tr[data-href]");

        rows.forEach(row => {
            row.addEventListener("click", () => {
                window.location.href = row.dataset.href;
            })
        })
    })
</script>
