@model IEnumerable<Eshop.Models.ShoppingCartModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="title-font">Koszyk</h1>

@if (Model.Count() > 0)
 {
 <div class="offer">
    @foreach (var item in Model)
     {
     <div data-href="Offer/Details/@item.OfferId" class="row-offer row-offer-border">
         <div class=" image-column">
             <img class="image-offer" src="@("/Images/"+item.Offer.GalleryModel.ImageModel[0].Name)" asp-append-version="true" />
         </div>
         <div class="description-column">
             <text></text>
             <p class="table-title-w table-title-font">@item.Offer.Title</p>
             <p class="table-content-w breaking-wordDB">@item.Offer.Content</p>
         </div>
         <div class="price-column">
             <text class="price">@item.Offer.Price PLN</text>
         </div>
     </div>   
     }
 </div>
 }
else
{
    <hr />
    <a>Twój koszyk jest pusty.</a>
}

