@model IEnumerable<Eshop.Models.ShoppingCartModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    tr[data-href] {
        cursor: pointer;
    }
</style>

<h1 style="padding-bottom: 10px; padding-top: 10px;">Koszyk</h1>

@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-href="posts/details/@item.OfferId">
                    <td>
                        <img class="image-size" src="@("/Images/" + item.Offer.GalleryModel.ImageModel[0].Name)" asp-append-version="true" alt="First slide">
                    </td>
                    <td>
                        <p class="table-title-w table-title-font"> @Html.DisplayFor(modelItem => item.Offer.Title)</p>
                        <p class="table-content-w breaking-wordDB">@Html.DisplayFor(modelItem => item.Offer.Content)</p>
                    </td>
                    <td class="price">
                        @Html.DisplayFor(modelItem => item.Offer.Price) <text> PLN</text>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Offer.Id" class="btn btn-danger">Usuń</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <hr />
    <a>Twój koszyk jest pusty.</a>
}

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const rows = document.querySelectorAll("tr[data-href]");

        rows.forEach(row => {
            row.addEventListener("click", () => {
                window.location.href = row.dataset.href;
            })
        })
    })
</script>
