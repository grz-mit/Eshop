@model IEnumerable<Eshop.Models.OfferModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="padding-bottom: 10px; padding-top: 10px;">Twoje Oferty</h1>
@if (Model.Count() > 0)
 {
 <div class="offer">
    @foreach (var item in Model)
     {
     <div data-href="Details/@item.Id" class="row-offer row-offer-border">
         <div class=" image-column">
             <img class="image-offer" src="@("/Images/"+item.GalleryModel.ImageModel[0].Name)" asp-append-version="true" />
         </div>
         <div class="description-column">
             <p class="table-title-w table-title-font">@item.Title</p>
             <p class="table-content-w breaking-wordDB">@item.Content</p>
         </div>
         <div class="price-column">
             <text class="price">@item.Price PLN</text>
         </div>
     </div>   
     }
 </div>
 }
else
{
    <hr />
    <a>Nie posiadasz jeszcze żadnych ofert.</a>
}
